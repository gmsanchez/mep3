<root main_tree_to_execute="BehaviorTree">
    <!-- ////////// -->
    <BehaviorTree ID="BehaviorTree">
        <SequenceStar>
            <Action ID="WaitMatchStartAction" state="1"/>
            <SubTree ID="go_to_pedestal" __shared_blackboard="true"/>
        </SequenceStar>
    </BehaviorTree>
    <!-- ////////// -->
    <BehaviorTree ID="go_to_pedestal">
        <SequenceStar>
            <Action goal="1.07;-0.57;-45" ID="NavigateToAction"/>
            <Action goal="1.163;-0.66;45" ID="PreciseNavigateToAction"/>
            <Delay delay_msec="20000">
                <AlwaysSuccess/>
            </Delay>
            <Parallel failure_threshold="1" success_threshold="3">
                <Action timeout="5" position="109" server_name="dynamixel_command/arm_left_motor_base" result="0" ID="DynamixelCommandAction" velocity="90" tolerance="2"/>
                <Action timeout="5" position="38.2" server_name="dynamixel_command/arm_left_motor_mid" result="0" ID="DynamixelCommandAction" velocity="90" tolerance="2"/>
                <Action timeout="5" position="129" server_name="dynamixel_command/arm_left_motor_gripper" result="0" ID="DynamixelCommandAction" velocity="90" tolerance="2"/>
            </Parallel>
            <Action server_name="vacuum_pump_command/arm_left_connector" result="1" ID="VacuumPumpCommandAction" connect="1"/>
            <Action timeout="5" position="0" server_name="dynamixel_command/arm_left_motor_mid" result="0" ID="DynamixelCommandAction" velocity="90" tolerance="2"/>
            <Parallel failure_threshold="1" success_threshold="2">
                <SubTree ID="swap" __shared_blackboard="true"/>
                <Action goal="0.95;-0.61;-0.61" ID="NavigateToAction"/>
            </Parallel>
            <Action timeout="5" position="90" server_name="dynamixel_command/arm_left_motor_gripper" result="0" ID="DynamixelCommandAction" velocity="90" tolerance="2"/>
            <Action timeout="5" position="90" server_name="dynamixel_command/arm_left_motor_mid" result="0" ID="DynamixelCommandAction" velocity="90" tolerance="2"/>
            <Action server_name="vacuum_pump_command/arm_left_connector" result="0" ID="VacuumPumpCommandAction" connect="0"/>
            <Action timeout="5" position="0" server_name="dynamixel_command/arm_left_motor_mid" result="0" ID="DynamixelCommandAction" velocity="90" tolerance="2"/>
        </SequenceStar>
    </BehaviorTree>
    <!-- ////////// -->
    <BehaviorTree ID="swap">
        <Sequence>
            <Parallel failure_threshold="1" success_threshold="3">
                <Action timeout="5" position="0" server_name="dynamixel_command/arm_right_motor_base" result="0" ID="DynamixelCommandAction" velocity="90" tolerance="2"/>
                <Action timeout="5" position="-5" server_name="dynamixel_command/arm_right_motor_mid" result="0" ID="DynamixelCommandAction" velocity="90" tolerance="2"/>
                <Action timeout="5" position="95" server_name="dynamixel_command/arm_right_motor_gripper" result="0" ID="DynamixelCommandAction" velocity="90" tolerance="2"/>
            </Parallel>
            <Parallel failure_threshold="1" success_threshold="3">
                <Action timeout="5" position="0" server_name="dynamixel_command/arm_left_motor_base" result="0" ID="DynamixelCommandAction" velocity="90" tolerance="2"/>
                <Action timeout="5" position="-5" server_name="dynamixel_command/arm_left_motor_mid" result="0" ID="DynamixelCommandAction" velocity="90" tolerance="2"/>
                <Action timeout="5" position="95" server_name="dynamixel_command/arm_left_motor_gripper" result="0" ID="DynamixelCommandAction" velocity="90" tolerance="2"/>
            </Parallel>
            <Action server_name="vacuum_pump_command/arm_left_connector" result="0" ID="VacuumPumpCommandAction" connect="1"/>
            <Action server_name="vacuum_pump_command/arm_right_connector" result="0" ID="VacuumPumpCommandAction" connect="0"/>
            <Parallel failure_threshold="1" success_threshold="2">
                <Action timeout="5" position="90" server_name="dynamixel_command/arm_left_motor_base" result="0" ID="DynamixelCommandAction" velocity="90" tolerance="2"/>
                <Action timeout="5" position="-90" server_name="dynamixel_command/arm_right_motor_base" result="0" ID="DynamixelCommandAction" velocity="90" tolerance="2"/>
            </Parallel>
        </Sequence>
    </BehaviorTree>
    <!-- ////////// -->
    <TreeNodesModel>
        <Action ID="DynamixelCommandAction">
            <input_port name="position" default="0">[deg]</input_port>
            <output_port name="result" default="0">0 - success, 1 - timeout, 2 - other error</output_port>
            <input_port name="server_name" default="dynamixel_command/arm_left_motor_base">Action server name</input_port>
            <input_port name="timeout" default="5">[s]</input_port>
            <input_port name="tolerance" default="2">[deg]</input_port>
            <input_port name="velocity" default="90">[deg/s]</input_port>
        </Action>
        <Action ID="MotionCommandAction">
            <input_port name="acceleration_angular" default="0">[rad/s^2]</input_port>
            <input_port name="acceleration_linear" default="0">[m/s^2]</input_port>
            <input_port name="command">[forward/rotate_relative/rotate_absolute]</input_port>
            <output_port name="result">[success/drift]</output_port>
            <input_port name="value" default="0">value to pass to motion function, in meters or radians</input_port>
            <input_port name="velocity_angular" default="0">[rad/s]</input_port>
            <input_port name="velocity_linear" default="0">[m/s]</input_port>
        </Action>
        <Action ID="NavigateToAction">
            <input_port name="goal" default="0;0;0">A target pose in format "x;y;theta".</input_port>
        </Action>
        <Action ID="PreciseNavigateToAction">
            <input_port name="goal" default="0;0;0">A target pose in format "x;y;theta".</input_port>
        </Action>
        <Action ID="VacuumPumpCommandAction">
            <input_port name="connect" default="0">0 - disconnect, 1 - connected</input_port>
            <output_port name="result" default="0">0 - disconnected, 1 - connected, 2 - couldn't disconnect, 3 - couldn't connect, 4 - other</output_port>
            <input_port name="server_name" default="vacuum_pump_command/arm_left_connector">Action server name</input_port>
        </Action>
        <Action ID="WaitMatchStartAction">
            <input_port name="state" default="2">0 = unarmed; 1 = armed; 2 = started</input_port>
        </Action>
        <SubTree ID="go_to_pedestal">
            <input_port name="__shared_blackboard"/>
        </SubTree>
        <SubTree ID="swap">
            <input_port name="__shared_blackboard" default="true"/>
        </SubTree>
    </TreeNodesModel>
    <!-- ////////// -->
</root>

