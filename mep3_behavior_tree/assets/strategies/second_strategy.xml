<root main_tree_to_execute="BehaviorTree">
    <!-- ////////// -->
    <BehaviorTree ID="BehaviorTree">
        <SequenceStar>
            <Action ID="WaitMatchStartAction" state="1"/>
            <SubTree ID="task_go_to_pedestal" __shared_blackboard="true"/>
            <Action ID="PreciseNavigateToAction" goal="0.9;-0.3;-45"/>
            <Parallel failure_threshold="1" success_threshold="4">
                <Action timeout="5" position="65" server_name="dynamixel_command/arm_left_motor_base" result="0" ID="DynamixelCommandAction" velocity="90" tolerance="2"/> 
                <Action timeout="5" position="65" server_name="dynamixel_command/arm_left_motor_base" result="0" ID="DynamixelCommandAction" velocity="90" tolerance="2"/>
                <Action timeout="5" position="90" server_name="dynamixel_command/arm_left_motor_mid" result="0" ID="DynamixelCommandAction" velocity="90" tolerance="2"/>
                <Action timeout="5" position="90" server_name="dynamixel_command/arm_right_motor_mid" result="0" ID="DynamixelCommandAction" velocity="90" tolerance="2"/>
            </Parallel>
            <Parallel failure_threshold="1" success_threshold="2">
                <Action server_name="vacuum_pump_command/arm_left_connector" result="0" ID="VacuumPumpCommandAction" connect="0"/>
                <Action server_name="vacuum_pump_command/arm_right_connector" result="0" ID="VacuumPumpCommandAction" connect="0"/>
            </Parallel>
            <Parallel failure_threshold="1" success_threshold="2">
                <Action timeout="5" position="0" server_name="dynamixel_command/arm_left_motor_mid" result="0" ID="DynamixelCommandAction" velocity="90" tolerance="2"/>
                <Action timeout="5" position="0" server_name="dynamixel_command/arm_right_motor_mid" result="0" ID="DynamixelCommandAction" velocity="90" tolerance="2"/>
            </Parallel>
        </SequenceStar>
    </BehaviorTree>
    <!-- ////////// -->
    <BehaviorTree ID="task_go_to_pedestal">
        <SequenceStar>
            <Action goal="0.8;-0.23;-45" ID="NavigateToAction"/>
            <Action goal="1.1488;-0.656;-45" ID="PreciseNavigateToAction"/>
            <Parallel failure_threshold="1" success_threshold="4">
                <Action timeout="5" position="115" server_name="dynamixel_command/arm_left_motor_base" result="0" ID="DynamixelCommandAction" velocity="90" tolerance="2"/>
                <Action timeout="5" position="-100" server_name="dynamixel_command/arm_right_motor_base" result="0" ID="DynamixelCommandAction" velocity="90" tolerance="2"/>
                <Action timeout="5" position="130" server_name="dynamixel_command/arm_left_motor_gripper" result="0" ID="DynamixelCommandAction" velocity="90" tolerance="2"/>
                <Action timeout="5" position="130" server_name="dynamixel_command/arm_right_motor_gripper" result="0" ID="DynamixelCommandAction" velocity="90" tolerance="2"/>
            </Parallel>
            <Parallel failure_threshold="1" success_threshold="2">
	        <Action timeout="5" position="52.8" server_name="dynamixel_command/arm_left_motor_mid" result="0" ID="DynamixelCommandAction" velocity="90" tolerance="2"/>
	        <Action timeout="5" position="51" server_name="dynamixel_command/arm_right_motor_mid" result="0" ID="DynamixelCommandAction" velocity="90" tolerance="2"/>
 	    </Parallel>
 	    <Parallel failure_threshold="1" success_threshold="2">
                <Action server_name="vacuum_pump_command/arm_left_connector" result="1" ID="VacuumPumpCommandAction" connect="1"/>
                <Action server_name="vacuum_pump_command/arm_right_connector" result="1" ID="VacuumPumpCommandAction" connect="1"/>
            </Parallel>
            <Parallel failure_threshold="1" success_threshold="4">
                <Action timeout="5" position="20" server_name="dynamixel_command/arm_left_motor_mid" result="0" ID="DynamixelCommandAction" velocity="90" tolerance="2"/>
                <Action timeout="5" position="20" server_name="dynamixel_command/arm_right_motor_mid" result="0" ID="DynamixelCommandAction" velocity="90" tolerance="2"/>
                <Action timeout="5" position="30" server_name="dynamixel_command/arm_left_motor_gripper" result="0" ID="DynamixelCommandAction" velocity="90" tolerance="2"/>
                <Action timeout="5" position="30" server_name="dynamixel_command/arm_right_motor_gripper" result="0" ID="DynamixelCommandAction" velocity="90" tolerance="2"/>
            </Parallel>
            
        </SequenceStar>
    </BehaviorTree>
    <!-- ////////// -->
    <BehaviorTree ID="skill_swap_right_to_left">
        <Sequence>
            <Parallel failure_threshold="1" success_threshold="3">
                <Action timeout="5" position="0" server_name="dynamixel_command/arm_right_motor_base" result="0" ID="DynamixelCommandAction" velocity="90" tolerance="2"/>
                <Action timeout="5" position="-5" server_name="dynamixel_command/arm_right_motor_mid" result="0" ID="DynamixelCommandAction" velocity="90" tolerance="2"/>
                <Action timeout="5" position="95" server_name="dynamixel_command/arm_right_motor_gripper" result="0" ID="DynamixelCommandAction" velocity="90" tolerance="2"/>
            </Parallel>
            <Parallel failure_threshold="1" success_threshold="3">
                <Action timeout="5" position="0" server_name="dynamixel_command/arm_left_motor_base" result="0" ID="DynamixelCommandAction" velocity="90" tolerance="2"/>
                <Action timeout="5" position="-5" server_name="dynamixel_command/arm_left_motor_mid" result="0" ID="DynamixelCommandAction" velocity="90" tolerance="2"/>
                <Action timeout="5" position="95" server_name="dynamixel_command/arm_left_motor_gripper" result="0" ID="DynamixelCommandAction" velocity="90" tolerance="2"/>
            </Parallel>
            <Action server_name="vacuum_pump_command/arm_left_connector" result="0" ID="VacuumPumpCommandAction" connect="1"/>
            <Action server_name="vacuum_pump_command/arm_right_connector" result="0" ID="VacuumPumpCommandAction" connect="0"/>
            <Parallel failure_threshold="1" success_threshold="2">
                <Action timeout="5" position="90" server_name="dynamixel_command/arm_left_motor_base" result="0" ID="DynamixelCommandAction" velocity="90" tolerance="2"/>
                <Action timeout="5" position="-90" server_name="dynamixel_command/arm_right_motor_base" result="0" ID="DynamixelCommandAction" velocity="90" tolerance="2"/>
            </Parallel>
        </Sequence>
    </BehaviorTree>
    <!-- ////////// -->
    <BehaviorTree ID="skill_swap_left_to_right">
        <SequenceStar>
            <Parallel failure_threshold="1" success_threshold="3">
                <Action result="0" timeout="5" tolerance="2" position="0" velocity="90" ID="DynamixelCommandAction" server_name="dynamixel_command/arm_left_motor_base"/>
                <Action result="0" timeout="5" tolerance="2" position="-5" velocity="90" ID="DynamixelCommandAction" server_name="dynamixel_command/arm_left_motor_mid"/>
                <Action result="0" timeout="5" tolerance="2" position="90" velocity="90" ID="DynamixelCommandAction" server_name="dynamixel_command/arm_left_motor_gripper"/>
            </Parallel>
            <Parallel failure_threshold="1" success_threshold="">
                <Action result="0" timeout="5" tolerance="2" position="0" velocity="90" ID="DynamixelCommandAction" server_name="dynamixel_command/arm_right_motor_base"/>
                <Action result="0" timeout="5" tolerance="2" position="-5" velocity="90" ID="DynamixelCommandAction" server_name="dynamixel_command/arm_right_motor_mid"/>
                <Action result="0" timeout="5" tolerance="2" position="95" velocity="90" ID="DynamixelCommandAction" server_name="dynamixel_command/arm_left_motor_gripper"/>
            </Parallel>
            <Action result="0" connect="1" ID="VacuumPumpCommandAction" server_name="vacuum_pump_command/arm_right_connector"/>
            <Action result="0" connect="0" ID="VacuumPumpCommandAction" server_name="vacuum_pump_command/arm_left_connector"/>
            <Parallel failure_threshold="1" success_threshold="2">
                <Action result="0" timeout="5" tolerance="2" position="90" velocity="90" ID="DynamixelCommandAction" server_name="dynamixel_command/arm_right_motor_base"/>
                <Action result="0" timeout="5" tolerance="2" position="-90" velocity="90" ID="DynamixelCommandAction" server_name="dynamixel_command/arm_left_motor_base"/>
            </Parallel>
        </SequenceStar>
    </BehaviorTree>
    <TreeNodesModel>
        <Action ID="DynamixelCommandAction">
            <input_port name="position" default="0">[deg]</input_port>
            <output_port name="result" default="0">0 - success, 1 - timeout, 2 - other error</output_port>
            <input_port name="server_name" default="dynamixel_command/arm_left_motor_base">Action server name</input_port>
            <input_port name="timeout" default="5">[s]</input_port>
            <input_port name="tolerance" default="2">[deg]</input_port>
            <input_port name="velocity" default="90">[deg/s]</input_port>
        </Action>
         <Action ID="LiftCommandAction">
            <input_port default="0" name="height">[cm]</input_port>
            <output_port default="0" name="result">0 - success, 1 - timeout, 2 - other error</output_port>
            <input_port default="5" name="timeout">[s]</input_port>
            <input_port default="0.5" name="tolerance">[cm]</input_port>
            <input_port default="1" name="velocity">[cm/s]</input_port>
        </Action>
        <Action ID="MotionCommandAction">
            <input_port name="acceleration_angular" default="0">[rad/s^2]</input_port>
            <input_port name="acceleration_linear" default="0">[m/s^2]</input_port>
            <input_port name="command">[forward/rotate_relative/rotate_absolute]</input_port>
            <output_port name="result">[success/drift]</output_port>
            <input_port name="value" default="0">value to pass to motion function, in meters or radians</input_port>
            <input_port name="velocity_angular" default="0">[rad/s]</input_port>
            <input_port name="velocity_linear" default="0">[m/s]</input_port>
        </Action>
        <Action ID="NavigateToAction">
            <input_port name="goal" default="0;0;0">A target pose in format "x;y;theta".</input_port>
        </Action>
        <Action ID="PreciseNavigateToAction">
            <input_port name="goal" default="0;0;0">A target pose in format "x;y;theta".</input_port>
        </Action>
        <Action ID="VacuumPumpCommandAction">
            <input_port name="connect" default="0">0 - disconnect, 1 - connected</input_port>
            <output_port name="result" default="0">0 - disconnected, 1 - connected, 2 - couldn't disconnect, 3 - couldn't connect, 4 - other</output_port>
            <input_port name="server_name" default="vacuum_pump_command/arm_left_connector">Action server name</input_port>
        </Action>
        <Action ID="WaitMatchStartAction">
            <input_port name="state" default="2">0 = unarmed; 1 = armed; 2 = started</input_port>
        </Action>
        <SubTree ID="task_go_to_pedestal">
            <input_port name="__shared_blackboard"/>
        </SubTree>
        <SubTree ID="skill_swap_right_to_left">
            <input_port name="__shared_blackboard" default="true"/>
        </SubTree>
        <SubTree ID="skill_swap_left_to_right">
            <input_port name="__shared_blackboard"/>
        </SubTree>
    </TreeNodesModel>
    <!-- ////////// -->
</root>

